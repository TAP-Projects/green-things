extends ../layout

block content

    .column.is-4

        h2.title Profile

        .content
            p.firstName 
                span.title.is-4 First Name: #{first_name}

            p.lastName
                span.title.is-4 Last Name #{last_name}

            p.email
                span.title.is-4 Email: #{email}

            p.username
                span.title.is-4 Username: #{username}

            p.edit-delete.content
                br
                // Change edit to save after changes have been made
                a.button.is-info.is-outlined(style="margin-right: 1em;")    
                    span Edit
                    span.icon.is-small
                        i.fas.fa-edit
                a.button.is-danger.is-outlined
                    span Delete
                    span.icon.is-small
                        i.fas.fa-times
            p.change-password.content
                a.button.is-danger.is-outlined Change Password
