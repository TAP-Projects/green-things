block header

    nav.navbar(role='navigation', aria-label='main navigation')
        .navbar-brand
            a.navbar-item(href='https://bulma.io')
                img(src='https://bulma.io/images/bulma-logo.png', width='112', height='28')
            a.navbar-burger.burger(role='button', aria-label='menu', aria-expanded='false', data-target='navbar')
                span(aria-hidden='true')
                span(aria-hidden='true')
                span(aria-hidden='true')
        #navbar.navbar-menu
            .navbar-start
                a.navbar-item
                    | Home
                a.navbar-item
                    | Documentation
                .navbar-item.has-dropdown.is-hoverable
                    a.navbar-link
                        | More
                        .navbar-dropdown
                            a.navbar-item
                                | About
                            a.navbar-item
                                | Jobs
                            a.navbar-item
                                | Contact
                            hr.navbar-divider
                            a.navbar-item
                                | Report an issue
            .navbar-end
            .navbar-item
                .buttons
                    a.button.is-primary
                        strong Sign up
                    a.button.is-light
                        | Log in
    nav.breadcrumb(aria-label='breadcrumbs')
        ul
            li
                a(href='#')
                    span.icon.is-small
                        i.fas.fa-home(aria-hidden='true')
                    span Bulma
            li
                a(href='#')
                    span.icon.is-small
                        i.fas.fa-book(aria-hidden='true')
                    span Documentation
            li
                a(href='#')
                    span.icon.is-small
                        i.fas.fa-puzzle-piece(aria-hidden='true')
                    span Components
            li.is-active
                a(href='#')
                    span.icon.is-small
                        i.fas.fa-thumbs-up(aria-hidden='true')
                    span Breadcrumb